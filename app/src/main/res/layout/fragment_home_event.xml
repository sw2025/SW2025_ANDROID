<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ListView
        android:layout_marginBottom="56dp"
        android:scrollbars="none"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>

    <RelativeLayout
        android:paddingTop="17dp"
        android:background="#fff"
        android:id="@+id/relative_show"
        android:layout_width="match_parent"
        android:layout_height="67dp" >

        <TextView
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/text_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666"
            android:textSize="14sp" />

        <TextView
            android:textSize="15sp"
            android:textColor="#666"
            android:id="@+id/text_time_sort"
            android:drawablePadding="15dp"
            android:drawableRight="@mipmap/arrow_down_gray"
            android:paddingRight="11dp"
            android:paddingLeft="11dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/text_count"
            android:gravity="center_vertical"
            android:background="@drawable/bgfff_rad2_strokeccc"
            android:text="时间排序"
            android:layout_width="wrap_content"
            android:layout_height="32dp" />

        <RelativeLayout
            android:layout_marginLeft="12dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/bgfff_rad2_strokeccc"
            android:layout_toLeftOf="@+id/text_time_sort"
            android:layout_width="match_parent"
            android:layout_height="32dp">
            <TextView
                android:id="@+id/left"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textColor="#666"
                android:textSize="15sp"
                android:text="阶段"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/mid"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/left"
                android:background="#ccc"
                android:layout_width="1px"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/text_select"
                android:paddingRight="16dp"
                android:drawableRight="@mipmap/arrow_down_gray"
                android:layout_marginLeft="11dp"
                android:layout_centerVertical="true"
                android:textColor="#333"
                android:textSize="15sp"
                android:text="全部"
                android:layout_toRightOf="@+id/mid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_marginTop="17dp"
            android:layout_below="@+id/text_time_sort"
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

    </RelativeLayout>

</FrameLayout>