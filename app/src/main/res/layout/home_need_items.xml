<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/bgfff_rad2_strokeccc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#00A7ED"
            android:id="@+id/relative_item_head"
            android:layout_width="match_parent"
            android:layout_height="26dp">

            <TextView
                android:id="@+id/type01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="#fff"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/text_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/type01"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:drawableLeft="@mipmap/icon_white_clock"
                android:drawablePadding="10dp"
                android:textColor="#fff"
                android:textSize="13sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_type"
                android:textColor="#333"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/image_collect"
                android:layout_marginTop="15dp"
                android:paddingRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="16dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/image_need"
                android:layout_marginLeft="10dp"
                android:layout_width="75dp"
                android:layout_height="65dp" />

            <TextView
                android:text="323"
                android:id="@+id/text_brief"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:lineSpacingMultiplier="1.2"
                android:layout_marginLeft="13dp"
                android:layout_toRightOf="@+id/image_need"
                android:ellipsize="end"
                android:maxLines="3"
                android:minLines="3"
                android:textSize="15sp"
                android:textColor="#666"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>