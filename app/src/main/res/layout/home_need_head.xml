<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bgccc_stroke00a7ed"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_head_left"
            android:background="#fff"
            android:layout_marginRight="1px"
            android:layout_marginBottom="1px"
            android:layout_marginLeft="1px"
            android:layout_marginTop="1px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="供求列表"
            android:textColor="#666"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_head_right"
            android:background="#fff"
            android:layout_marginLeft="1px"
            android:layout_marginRight="1px"
            android:layout_marginBottom="1px"
            android:layout_marginTop="1px"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="我的需求"
            android:textColor="#666"
            android:textSize="18sp" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/bgfff_rad2_strokeccc"
            android:paddingBottom="33dp"
            android:layout_marginBottom="16dp">

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frame01"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/text01"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_wait"
                    android:text="待审核"
                    android:textColor="#666"
                    android:textSize="14sp" />
            </FrameLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frame02"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/text02"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_failed"
                    android:text="审核失败"
                    android:textColor="#666"
                    android:textSize="14sp" />
            </FrameLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frame03"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/text03"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_published"
                    android:text="已发布"
                    android:textColor="#666"
                    android:textSize="14sp" />
            </FrameLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frame04"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/text04"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/ic_launcher"
                    android:text="已完成"
                    android:textColor="#666"
                    android:textSize="14sp" />
            </FrameLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frame05"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/text05"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_collect"
                    android:text="我的收藏"
                    android:textColor="#666"
                    android:textSize="14sp" />
            </FrameLayout>

            <FrameLayout
                android:visibility="gone"
                android:id="@+id/frame06"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/text06"
                    android:drawablePadding="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableTop="@mipmap/icon_review"
                    android:text="我的评论"
                    android:textColor="#666"
                    android:textSize="14sp" />
            </FrameLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/text_submit"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/bg00a7ed_rad2"
            android:gravity="center"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="发布我的需求"
            android:textColor="#fff"
            android:textSize="17sp" />

    </FrameLayout>

    <TextView
        android:background="#E8E8E8"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

</LinearLayout>