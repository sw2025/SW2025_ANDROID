<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/loginbg"
    android:orientation="vertical"
    tools:context="com.benben.sw2025.activity.RegisterActivity">

    <ImageView
        android:layout_marginTop="95dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.benben.sw2025.views.XEditText
        android:singleLine="true"
        android:drawablePadding="15dp"
        android:hint="请输入手机号"
        android:layout_marginTop="36dp"
        android:id="@+id/edit_userName"
        android:inputType="phone"
        android:textSize="14sp"
        android:textColor="#666"
        android:background="@drawable/bgfff_rad2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableLeft="@mipmap/icon_user"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:paddingRight="20dp"
            android:paddingLeft="15dp"
            android:id="@+id/text_getSmsCode"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#fff"
            android:text="获取验证码"
            android:background="@drawable/bg00a7ed_rad2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <com.benben.sw2025.views.XEditText
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/text_getSmsCode"
            android:singleLine="true"
            android:drawablePadding="15dp"
            android:hint="短信验证码"
            android:id="@+id/edit_smsCode"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColor="#666"
            android:background="@drawable/bgfff_rad2"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableLeft="@mipmap/icon_test"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </RelativeLayout>

    <com.benben.sw2025.views.XEditText
        android:singleLine="true"
        android:drawablePadding="15dp"
        android:hint="请设置密码"
        android:layout_marginTop="18dp"
        android:id="@+id/edit_pwd"
        android:textSize="14sp"
        android:textColor="#666"
        android:background="@drawable/bgfff_rad2"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawableLeft="@mipmap/icon_pwd"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

    <RelativeLayout
        android:id="@+id/relative_one"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="40dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <RelativeLayout
            android:id="@+id/relative_ask"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/icon_ask"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <ImageView
            android:layout_marginRight="40dp"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/arrow_down"
            android:id="@+id/img_pullDown"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="#fff"
            android:background="@drawable/bg00a7ed_rad2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <TextView
            android:gravity="center_vertical"
            android:singleLine="true"
            android:drawablePadding="15dp"
            android:text="专家"
            android:id="@+id/text_role"
            android:inputType="phone"
            android:textSize="14sp"
            android:textColor="#666"
            android:background="@drawable/bgfff_rad2"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:drawableLeft="@mipmap/icon_role"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_toLeftOf="@+id/img_pullDown"
            android:layout_toStartOf="@+id/img_pullDown" />
    </RelativeLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/text_two"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="#fff"
        android:text="注册代表您同意《升维网服务条款》"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/btn_login"
        android:textSize="18sp"
        android:textColor="#fff"
        android:background="@drawable/bg00a7ed_rad2"
        android:text="注册"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_width="match_parent"
        android:layout_height="45dp" />

</LinearLayout>
